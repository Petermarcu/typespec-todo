{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "InvalidUserResponse.json",
    "type": "object",
    "properties": {
        "statusCode": {
            "type": "number",
            "const": 422
        },
        "code": {
            "type": "string",
            "const": "invalid-user"
        }
    },
    "required": [
        "statusCode",
        "code"
    ],
    "allOf": [
        {
            "$ref": "ApiError.json"
        }
    ],
    "description": "The user is invalid (e.g. forgot to enter email address)"
}