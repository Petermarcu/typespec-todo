{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "TodoLabelRecord.json",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "color": {
            "type": "string",
            "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
        }
    },
    "required": [
        "name"
    ]
}