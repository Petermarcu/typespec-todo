{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "TodoItemPatch.json",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "maxLength": 255,
            "description": "The item's title"
        },
        "assignedTo": {
            "anyOf": [
                {
                    "type": "integer",
                    "description": "User that the todo is assigned to"
                },
                {
                    "type": "null"
                }
            ],
            "description": "User that the todo is assigned to"
        },
        "description": {
            "anyOf": [
                {
                    "type": "string",
                    "description": "A longer description of the todo item in markdown format"
                },
                {
                    "type": "null"
                }
            ],
            "description": "A longer description of the todo item in markdown format"
        },
        "status": {
            "anyOf": [
                {
                    "type": "string",
                    "const": "NotStarted"
                },
                {
                    "type": "string",
                    "const": "InProgress"
                },
                {
                    "type": "string",
                    "const": "Completed"
                }
            ],
            "description": "The status of the todo item"
        }
    }
}