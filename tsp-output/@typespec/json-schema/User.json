{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "User.json",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "description": "An autogenerated unique id for the user"
        },
        "username": {
            "type": "string",
            "minLength": 2,
            "maxLength": 50,
            "description": "The user's username"
        },
        "email": {
            "type": "string",
            "format": "email",
            "description": "The user's email address"
        },
        "password": {
            "type": "string",
            "description": "The user's password, provided when creating a user\nbut is otherwise not visible (and hashed by the backend)"
        },
        "validated": {
            "type": "boolean",
            "description": "Whether the user is validated. Never visible to the API."
        }
    },
    "required": [
        "id",
        "username",
        "email",
        "password",
        "validated"
    ]
}