{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "TodoItem.json",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "description": "The item's unique id"
        },
        "title": {
            "type": "string",
            "maxLength": 255,
            "description": "The item's title"
        },
        "createdBy": {
            "type": "integer",
            "description": "User that created the todo"
        },
        "assignedTo": {
            "type": "integer",
            "description": "User that the todo is assigned to"
        },
        "description": {
            "type": "string",
            "description": "A longer description of the todo item in markdown format"
        },
        "status": {
            "anyOf": [
                {
                    "type": "string",
                    "const": "NotStarted"
                },
                {
                    "type": "string",
                    "const": "InProgress"
                },
                {
                    "type": "string",
                    "const": "Completed"
                }
            ],
            "description": "The status of the todo item"
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "When the todo item was created."
        },
        "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "When the todo item was last updated"
        },
        "completedAt": {
            "type": "string",
            "format": "date-time",
            "description": "When the todo item was makred as completed"
        },
        "labels": {
            "$ref": "TodoLabels.json"
        }
    },
    "required": [
        "id",
        "title",
        "createdBy",
        "status",
        "createdAt",
        "updatedAt",
        "labels"
    ]
}